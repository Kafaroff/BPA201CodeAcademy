<div class="container my-5 text-center">
    <h2>Sayğac</h2>

    <span id="count" class="fs-1 d-block my-3">0</span>

    <button class="btn btn-success me-2" onclick="increase()">Artır</button>
    <button class="btn btn-danger me-2" onclick="decrease()">Azalt</button>
    <button class="btn btn-secondary" onclick="resetCount()">Sıfırla</button>
</div>

<script>
    let counter = 0;
    const countSpan = document.getElementById("count");

    function increase() {
        counter++;
        countSpan.textContent = counter;
    }

    function decrease() {
        counter--;
        countSpan.textContent = counter;
    }

    function resetCount() {
        counter = 0;
        countSpan.textContent = counter;
    }
</script>

